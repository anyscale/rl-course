{
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 100,
    "overrides": [
        {
            "files": "*.sass",
            "options": {
                "printWidth": 999
            }
        },
        {
          "files": "*.md",
          "options": {
              "tabWidth": 2,
              "printWidth": 80,
              "proseWrap": "always",
              "htmlWhitespaceSensitivity": "strict"
          }
      }
    ]
}
